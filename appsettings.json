{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.Hosting.Lifetime": "Information",
      "BlazorDbEditor": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss ",
      "LogLevel": {
      "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DataDevConnect": "Host=localhost;Port=5432;Database=postgres;Username=postgres;Password=postgres"
  },
  "Authorization": {
    "Roles": [
      "LoggedIn",
      "User",
      "Admin",
      "Editor",
      "Viewer"
    ],
    "UserRoles": {
      "john@company.com": ["LoggedIn", "Admin", "Editor"],
      "jane@company.com": ["LoggedIn", "User", "Viewer"],
      "admin@company.com": ["LoggedIn", "Admin"],
      "editor@company.com": ["LoggedIn", "Editor"],
      "viewer@company.com": ["LoggedIn", "Viewer"]
    }
  }
}

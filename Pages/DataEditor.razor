@page "/data-editor"
@using BlazorDbEditor.Services
@inject IInMemoryDataStore DataStore
@inject IJSRuntime JSRuntime

<PageTitle>Blazor DataDev - DB Table Column CRUD</PageTitle>

<h3>Data Editor</h3>

<div class="row">
    <div class="col-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Tables</h5>
            </div>
            <div class="list-group list-group-flush" style="max-height: 600px; overflow-y: auto;">
                @foreach (var table in tables)
                {
                    <button class="list-group-item list-group-item-action @(selectedTable == table ? "active" : "")"
                            @onclick="() => SelectTable(table)">
                        @table
                        <span class="badge bg-secondary float-end">@DataStore.GetRowCount(table)</span>
                    </button>
                }
                @if (!tables.Any())
                {
                    <div class="p-3 text-muted text-center">
                        <small>No tables loaded. Load a DDL file in the Offline Editor first.</small>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="col-md-9">
        @if (!string.IsNullOrEmpty(selectedTable))
        {
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">@selectedTable</h5>
                    <button class="btn btn-sm btn-primary" @onclick="ShowAddRowModal">
                        <i class="bi bi-plus-circle"></i> Add Row
                    </button>
                </div>
                <div class="card-body">
                    @if (rows.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered table-hover">
                                <thead>
                                    <tr>
                                        @foreach (var column in rows.First().Keys)
                                        {
                                            <th>@column</th>
                                        }
                                        <th style="width: 120px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var row in rows)
                                    {
                                        <tr>
                                            @foreach (var value in row.Values)
                                            {
                                                <td>@(value?.ToString() ?? "NULL")</td>
                                            }
                                            <td>
                                                <button class="btn btn-sm btn-warning me-1" @onclick="() => ShowEditRowModal(row)">
                                                    <i class="bi bi-pencil"></i>
                                                </button>
                                                <button class="btn btn-sm btn-danger" @onclick="() => DeleteRow(row)">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <div>
                                Showing @rows.Count of @totalRows rows
                            </div>
                            <div>
                                <button class="btn btn-sm btn-secondary" @onclick="PreviousPage" disabled="@(currentPage == 0)">
                                    Previous
                                </button>
                                <span class="mx-2">Page @(currentPage + 1)</span>
                                <button class="btn btn-sm btn-secondary" @onclick="NextPage" disabled="@(!hasMore)">
                                    Next
                                </button>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            No data found. Click "Add Row" to insert data.
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                Select a table from the left to view and edit data.
            </div>
        }
    </div>
</div>

@* Add/Edit Row Modal *@
@if (showModal)
{
    <div class="modal fade show" style="display: block; background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(isEditMode ? "Edit Row" : "Add New Row")</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <form>
                        @foreach (var column in schema)
                        {
                            <div class="mb-3">
                                <label class="form-label">
                                    @column.Name
                                    <small class="text-muted">(@column.Type)</small>
                                    @if (!column.Nullable)
                                    {
                                        <span class="text-danger">*</span>
                                    }
                                </label>
                                <input type="text" class="form-control" 
                                       @bind="editingRow[column.Name]"
                                       placeholder="@(column.Nullable ? "NULL" : "Required")" />
                            </div>
                        }
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveRow">
                        @(isEditMode ? "Update" : "Add")
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<string> tables = new();
    private string selectedTable = "";
    private List<Dictionary<string, object?>> rows = new();
    private List<ColumnInfo> schema = new();
    private int totalRows = 0;
    private int currentPage = 0;
    private int pageSize = 20;
    private bool hasMore = false;

    private bool showModal = false;
    private bool isEditMode = false;
    private Dictionary<string, string> editingRow = new();
    private string? editingRowId = null;

    protected override void OnInitialized()
    {
        LoadTables();
    }

    private void LoadTables()
    {
        tables = DataStore.GetTableNames();
    }

    private void SelectTable(string tableName)
    {
        selectedTable = tableName;
        currentPage = 0;
        LoadTableData();
    }

    private void LoadTableData()
    {
        if (string.IsNullOrEmpty(selectedTable)) return;

        schema = DataStore.GetTableSchema(selectedTable) ?? new();
        var allRows = DataStore.GetAllRows(selectedTable);
        totalRows = allRows.Count;
        
        rows = allRows.Skip(currentPage * pageSize).Take(pageSize).ToList();
        hasMore = (currentPage + 1) * pageSize < totalRows;
    }

    private void NextPage()
    {
        if (hasMore)
        {
            currentPage++;
            LoadTableData();
        }
    }

    private void PreviousPage()
    {
        if (currentPage > 0)
        {
            currentPage--;
            LoadTableData();
        }
    }

    private void ShowAddRowModal()
    {
        isEditMode = false;
        editingRow = new Dictionary<string, string>();
        
        foreach (var column in schema)
        {
            editingRow[column.Name] = "";
        }
        
        showModal = true;
    }

    private void ShowEditRowModal(Dictionary<string, object?> row)
    {
        isEditMode = true;
        editingRow = new Dictionary<string, string>();
        
        var pkColumn = schema.FirstOrDefault(c => c.IsPrimaryKey)?.Name ?? "id";
        editingRowId = row.ContainsKey(pkColumn) ? row[pkColumn]?.ToString() : null;
        
        foreach (var kvp in row)
        {
            editingRow[kvp.Key] = kvp.Value?.ToString() ?? "";
        }
        
        showModal = true;
    }

    private void SaveRow()
    {
        try
        {
            var row = new Dictionary<string, object?>();
            foreach (var kvp in editingRow)
            {
                row[kvp.Key] = string.IsNullOrWhiteSpace(kvp.Value) ? null : kvp.Value;
            }

            if (isEditMode && editingRowId != null)
            {
                DataStore.UpdateRow(selectedTable, editingRowId, row);
            }
            else
            {
                DataStore.AddRow(selectedTable, row);
            }

            CloseModal();
            LoadTableData();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error saving row: {ex.Message}");
        }
    }

    private void DeleteRow(Dictionary<string, object?> row)
    {
        try
        {
            var pkColumn = schema.FirstOrDefault(c => c.IsPrimaryKey)?.Name ?? "id";
            var id = row.ContainsKey(pkColumn) ? row[pkColumn] : null;
            
            if (id != null)
            {
                DataStore.DeleteRow(selectedTable, id);
                LoadTableData();
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error deleting row: {ex.Message}");
        }
    }

    private void CloseModal()
    {
        showModal = false;
        editingRow.Clear();
        editingRowId = null;
    }
}
